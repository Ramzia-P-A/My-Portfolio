<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - My Portfolio</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@400;600&display=swap" rel="stylesheet">

    <!-- Custom Styles -->
    <style>
        .neon-text {
            color: #38bdf8;
            text-shadow: 0 0 5px #38bdf8, 0 0 10px #38bdf8, 0 0 20px #0ea5e9;
        }

        .neon-btn {
            background-color: #1e3a8a;
            border: none;
            box-shadow: 0 0 8px #38bdf8, 0 0 15px #0ea5e9;
        }

            .neon-btn:hover {
                background-color: #2563eb;
                box-shadow: 0 0 12px #38bdf8, 0 0 25px #0ea5e9;
            }

        body {
            font-family: 'Rajdhani', sans-serif;
            background-color: #0f172a; /* dark slate blue */
            color: #f1f5f9;
        }

        .navbar .nav-link.active {
            font-weight: bold;
            color: #0d6efd !important;
        }

        a.nav-link {
            color: #38bdf8 !important;
        }

            a.nav-link:hover {
                color: #0ea5e9 !important;
                text-decoration: underline;
            }

        .btn-primary {
            box-shadow: 0 0 10px #38bdf8;
            background-color: #1e3a8a;
            border-color: #1e3a8a;
        }

            .btn-primary:hover {
                background-color: #1d4ed8;
                border-color: #1d4ed8;
            }

        footer {
            background-color: #1e293b;
            color: #cbd5e1;
        }

        #particles-js {
            position: fixed;
            width: 100%;
            height: 100%;
            z-index: -1;
        }

        .main-content {
            position: relative;
            z-index: 1;
        }
    </style>
</head>

<body class="d-flex flex-column min-vh-100">
    <!-- Particle Background -->
    <div id="particles-js"></div>

    <!-- Main Content -->
    <div class="main-content flex-fill">
        <header class="bg-dark text-white py-3 mb-4">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
                <div class="container">
                    <a class="navbar-brand fw-bold text-info" href="/">Ramzia</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item"><a class="nav-link" asp-controller="Portfolio" asp-action="Index">Home</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Portfolio" asp-action="About">About</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Portfolio" asp-action="Projects">Projects</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Portfolio" asp-action="Experience">Experience</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Portfolio" asp-action="Contact">Contact</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <main class="py-4 px-3 px-md-5">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="text-center py-4 mt-5 border-top">
        <div class="container">
            <p class="mb-1 text-info">© @DateTime.Now.Year Ramzia P A</p>
            <p class="mb-0 text-info">Powered by ASP.NET Core • Styled with 💻</p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
    <script>
        particlesJS.load('particles-js', '/particles.json', function () {
            console.log('Particles loaded');
        });
    </script>
    @RenderSection("Scripts", required: false)

    @if (TempData["MessageSent"] != null)
    {
        <div class="toast show position-fixed top-0 end-0 m-4 bg-success text-white">
            <div class="toast-body">
                @TempData["MessageSent"]
            </div>
        </div>
    }
</body>
</html>
